<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sahabatsenjamain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">

    <!-- Gambar header -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/sahabatsenja" />

    <!-- Konten bisa discroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sahabat Senja"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Sinopsis -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kisah dua sahabat yang selalu menikmati senja, hingga suatu hari segalanya berubah."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Isi cerita -->
            <TextView
                android:id="@+id/isiceritasahabatsenja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:text="@string/cerita_sahabat_senja"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
